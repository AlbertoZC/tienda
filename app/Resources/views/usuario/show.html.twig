{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuario</h1>

    <table>
        <tbody>
            <tr>
                <th>Clave</th>
                <td>{{ usuario.clave }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ usuario.email }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ usuario.bio }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ usuario.avatar }}</td>
            </tr>
            <tr>
                <th>Verificada</th>
                <td>{{ usuario.verificada }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if usuario.fecha %}{{ usuario.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ usuario.username }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuario_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usuario_edit', { 'username': usuario.username }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
